@model Student


<div class="card rounded shadow p-4">

    <h3>Edit Student</h3>

    <form asp-action="Edit">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <!-- we hide the id as its not user editable but needs to be in the -->
        <!-- form to ensure the student passed to the controller is complete -->    
        <input type="hidden" asp-for="Id" class="form-control"/>

        <!-- add form groups for each student attributed being edited -->
        <!-- you can copy the necessary groups from Create.cshtml     -->
         <!-- name -->
        <div class="mt-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span  asp-validation-for="Name" class="text-danger"></span>
        </div>
    
        <!-- course -->
        <div class="mt-3">
            <label asp-for="Course" class="form-label"></label>
            <input asp-for="Course" class="form-control"/>
            <span asp-validation-for="Course" class="text-danger"></span>
        </div>

        <!--move Age and grade input groups in 2 columns in single row -->      
        <div class="row mt-3">
            <div class="col">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="Grade" class="form-label"></label>
                <input asp-for="Grade" class="form-control"/>
                <span  asp-validation-for="Grade" class="text-danger"></span>
            </div>
        </div>

        <!-- email -->
        <div class="mt-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control"/>
            <span  asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- add PhotoUrl input group - ensure input field type is url -->
        <div class="mt-3">
            <label asp-for="PhotoUrl" class="form-label"></label>
            <input asp-for="PhotoUrl" type="url" class="form-control"/>
            <span  asp-validation-for="PhotoUrl" class="text-danger"></span>
        </div>
       
        <!-- submit button and cancel link which navigates to Index action -->
        <div class="mt-3">
            <input type="submit" value="Save" class="btn btn-primary"/>
            <!-- exercise - modify navigation to display student on cancel -->
            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id" >Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}