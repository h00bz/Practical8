@model Ticket

<!-- TBC - add form to create a ticket -->
<div class="card rounded shadow p-4">

    <h3>Create Ticket</h3>
    <form asp-action="TicketCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- name -->
        <div class="mt-3">
            <input type="hidden" asp-for="StudentId" class="form-control" />
        </div>
        <div class="mt-3">
            <label asp-for="Issue" class="form-label"></label>
            <textarea rows="5" asp-for="Issue" class="form-control"></textarea>
            <span asp-validation-for="Issue" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button type="submit" value="TicketCreate" class="btn btn-primary">Submit</button>
            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.StudentId">Cancel</a>
        </div>
    </form>
</div>
<!-- consider wrapping form in a card to match usage in e.g Create.cshtml -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}